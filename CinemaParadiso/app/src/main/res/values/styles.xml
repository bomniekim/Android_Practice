<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/nanumTextView</item>
        <item name="buttonStyle">@style/nanumButton</item>
        <item name="android:editTextStyle">@style/nanumEditText</item>
    </style>

    <style name="nanumTextView" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:fontFamily">@font/nsr</item>
    </style>

    <style name="nanumButton" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:fontFamily">@font/nsr</item>
    </style>


    <style name="nanumEditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/nsr</item>
    </style>
</resources>
